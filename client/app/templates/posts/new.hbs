<section class="posts new">
  <h1>撰写新博客</h1>

  <form id="new-post" enctype="multipart/form-data" {{action createPost on="submit"}}>
    <div class="form-group">
      <label for="title">标题：</label>
      {{input id="title"
              value=model.title
              placeholder="给新博客添加描述性的标题"}}
    </div>

    <div class="form-group">
      <label for="category_id">分类：</label>
      {{view Ember.Select id="category_id"
                          content=categories
                          optionLabelPath="content.name"
                          optionValuePath="content.id"
                          selection=model.category}}
    </div>

    <div class="form-group">
      <label for="content">内容：</label>
      {{rich-editor id="content"
                    value=model.content
                    placeholder="给新博客添加精彩的内容"}}
    </div>

    <div class="form-group">
      <label for="attachment">图片：</label>
      {{!uploader type="file" action="uploadAttachment"}}
    </div>

    <div class="form-group">
      <button class="button primary" type="submit" role="button">发布</button>
    </div>
  </form>
</section>
